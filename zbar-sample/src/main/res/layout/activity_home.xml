<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#003456"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/operazioni_img" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Benvenuto utente"
        android:textColor="#FF9900"
        android:textSize="20dp"
        android:paddingLeft="26dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_carico"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_blue_selector"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:onClick="Carico"
        android:text="Carico"/>

    <Button
        android:id="@+id/btn_scarico"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_blue_selector"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:onClick="Scarico"
        android:text="Scarico"/>


</LinearLayout>